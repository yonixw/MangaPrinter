<Window x:Class="MangaPrinter.WpfGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaPrinter.WpfGUI"
        mc:Ignorable="d"
        Title="Manga printer and binder manager" Height="450" Width="800"
        FontSize="9.75pt" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <TabControl>
            <TabItem Header="Chapter and Files">
                <DockPanel>
                    <Menu DockPanel.Dock="Top" Padding="5px" FontSize="9.75pt">
                        <MenuItem Header="• Double-Page min width:" IsEnabled="False"></MenuItem>
                        <TextBox Name="txtPageMaxWidth" Width="100px" Text="900" TextChanged="txtPageMaxWidth_TextChanged"></TextBox>
                        <MenuItem Header="px" IsEnabled="False"></MenuItem>
                    </Menu>
                    <Menu DockPanel.Dock="Top" Padding="5px" FontSize="9.75pt">
                        <MenuItem Header="Import folders" HorizontalAlignment="Right"></MenuItem>
                        <MenuItem Header="Create chapter" HorizontalAlignment="Right"></MenuItem>
                        <MenuItem Header="Add files"></MenuItem>
                    </Menu>
                    
                    <TreeView>
                        
                    </TreeView>
                </DockPanel>
            </TabItem>
            <TabItem Header="Binding">

            </TabItem>
            <TabItem Header="Print and Export">

            </TabItem>

        </TabControl>
    </DockPanel>
</Window>
